<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_tutorized_tree" model="ir.ui.view">
        <field name="name">tutorized.tree</field>
        <field name="model">tutorized</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="actual_age"/>
                <field name="tutor_id"/>
                <field name="genre"/>
                <field name="school"/>
            </tree>
        </field>
    </record>

    <record id="view_tutorized_form" model="ir.ui.view">
        <field name="name">tutorized.form</field>
        <field name="model">tutorized</field>
        <field name="arch" type="xml">
            <form string="Tutorizados">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'zoom':true}"/>
                        <group>
                            <field name="birth_date">
                                <attribute name="options">{"datepicker": {"max": 0}}</attribute>
                            </field>
                            <field name="actual_age"/>
                            <field name="tutor_id"/>
                            <field name="is_relative"/>
                            <field name="medical_condition"/>
                        </group>
                        <group>
                            <field name="genre"/>
                            <field name="vaccine"/>
                            <field name="school"/>
                            <field name="has_course"/>
                            <field name="english_level"/>
                            <field name="photo_carnet"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tutorized" model="ir.actions.act_window">
        <field name="name">Tutorizados</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">tutorized</field>
    </record>

    <menuitem id="menuitem_tutorized"
        parent="prueba_contactos.menuitem_family"
        name="Tutorizados"
        action="prueba_contactos.action_tutorized"/>

</odoo>
